<h1>Novo usuario</h1>

<% if @usuario.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= @usuario.errors.count %> erro(s) impedem que o usu√°rio seja salvo:
    </h2>
    <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with scope: :usuario, url: usuarios_path, local: true do |form| %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :nome %><br>
    <%= form.text_field :nome %>
  </p>

  <p>
    <%= form.label :senha %><br>
    <%= form.password_field :senha %>
  </p>

  <p>
    <%= form.submit 'Salvar' %>
  </p>
<% end %>